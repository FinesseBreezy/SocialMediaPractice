<h1>Create new Item</h1>
<%= form_for [@department, @item] do |f| %>
  <%= f.label "Item Name" %>
  <%= f.text_field :name, required: true, autofocus: true %>
  <%= f.label "Item description" %>
  <%= f.text_field :description, required: true, autofocus: true %>
  <%= f.label 'Price' %>
  <%= f.text_field :price, required: true, autofocus: true %>
  <br />
  <%= f.submit %>
<% end %>
