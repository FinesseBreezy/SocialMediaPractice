<%= current_user.name %>
    <% @posts.each do |post| %>
    <%= post.title %>
    <%= post.context %>
    <%= post.image %>
    <%= link_to 'Show', post %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
<%= link_to 'New Post', new_post_path %>
