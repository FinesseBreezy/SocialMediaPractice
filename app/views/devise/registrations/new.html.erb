<body id="b">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="register-page">
    <div class="form">
      <form class="register-form">

          <div class="field">
            <%= f.text_field :name, autofocus: true, autocomplete: "off", placeholder: "name"%>
            <p>   </p>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email"%>

            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>

            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password"%>
          </div>
            <%= f.submit "Sign up", :class => "actions" %>
        </form>
        <% end %>
        <p class="message">Already registered? <%= link_to "Sign in", new_session_path(resource_name) %></p>
      </div>
    </div>
</body>
